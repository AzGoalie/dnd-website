<% provide(:title, 'Sign Up') %>

<h1 class="text-center">Sign Up</h1>
<div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
	<%= simple_form_for @user do |f| %>
		<div class="form-group">
 		<%= f.input :username, required: false, input_html: { class: "form-control input-lg" }%>
 		</div>

 		<div class="form-group">
 		<%= f.input :email, required: false, input_html: { class: "form-control input-lg"} %>
		</div>

		<div class="form-group">
		<%= f.input :password, input_html: { class: "form-control input-lg" }%>
		</div>

		<div class="form-group">
		<%= f.input :password_confirmation, input_html: { class: "form-control input-lg" } %>
		</div>

		<div class="form-group">
		<%= f.button :submit, class: "btn btn-lg btn-primary btn-block" %>
		</div>
	<% end %>
</div>