<% provide(:title, 'Edit Note') %>

<h1 class="text-center"><%= @note.title %></h1>

<%= render 'campaigns/sidebar' %>
<div class="col-sm-9 ">
	<%= simple_form_for @note do |f| %>
 		<%= f.input :title, required: false %>
 		<%= f.input :body, required: false, input_html: {rows: 10}%>
		<%= f.input :private %>
		<%= f.button :submit, "Save", class: "btn btn-lg btn-primary btn-block" %>
	<% end %>
</div>