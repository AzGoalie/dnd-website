<% provide(:title, @note.title) %>

<h1 class="text-center"><%=@campaign.title%></h1>

<%= render 'campaigns/sidebar' %>
<div class="col-sm-9 ">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h1 class="panel-title"><%= @note.title %></h1>
		</div>
		<div id="note_body" class="panel-body">
			<%= simple_format @note.body %>
		</div>
	</div>
	<% if current_user == @note.user %>
		<div class="btn-group btn-group-justified" role="group" aria-label="...">
			<div class="btn-group" role="group">
				<%= link_to 'Edit Note', edit_note_path(@note), class: "btn btn-primary" %>
			</div>
			<div class="btn-group" role="group">
				<%= link_to 'Delete Note', @note, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
			</div>
		</div>
	<% end %>
</div>