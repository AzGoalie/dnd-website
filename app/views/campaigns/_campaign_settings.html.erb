<%= simple_form_for @campaign do |f| %>
    <%= f.input :title, required: false %>
    <%= f.input :description, required: false %>
    <%= f.association :users, label: "Invite Users", label_method: :username %>
    <%= f.input :private, as: :boolean %>
    <%= f.button :submit, class: "btn btn-lg btn-primary btn-block" %>
  <% end %>