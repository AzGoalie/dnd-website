<% provide(:title, 'Creating a new character') %>

<h1 class="text-center">New Character for <%=@campaign.title%> </h1>
<div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
	<%= simple_form_for @character, :url => { :action => :create, :campaign => @campaign.id } do |f| %>
		<%= hidden_field_tag :campaign_id, @campaign.id %>
 		<%= f.input :name, required: false %>
		<%= f.button :submit, class: "btn btn-lg btn-primary btn-block" %>
	<% end %>
</div>